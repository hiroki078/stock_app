<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BLOG</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <%- include('header')%>
    <div class="sign">
      <div class="container">
        <h1><a href="/list">在庫確認リストアプリ</a></h1>
        <% if(errors.length > 0) {%>
            <ul>
                <% errors.forEach((error) => { %>
                    <li><%= error %></li>
                <% })%>
            </ul>
          <% }%>
        <div class="panel">
          <h2>ログイン</h2>
          <form action="/login" method="post">
            <p>メールアドレス</p>
            <input type="text" name="email">
            <p>パスワード</p>
            <input type="password" name="password">
            <input type="submit" value="ログイン">
            <a href="/index">商品一覧にもどる</a>
            <a href="/">トップに戻る</a>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
